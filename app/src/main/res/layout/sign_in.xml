<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bgLAY"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainbg"
    tools:context=".SignActivity"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logoIMG"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/usernameETXT"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:hint="@string/username"
        android:textColorHint="#303481"
        android:textSize="24sp"
        android:drawableStart="@drawable/profile_resize"
        android:drawablePadding="5dp"
        />


    <EditText
        android:id="@+id/nicknameETXT"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:hint="@string/nickname"
        android:textColorHint="#303481"
        android:textSize="24sp"
        android:drawableStart="@drawable/profile_resize"
        android:drawablePadding="5dp"/>

    <EditText
        android:id="@+id/pwdETXT"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="textPassword"
        android:padding="10dp"
        android:paddingStart="15dp"
        android:hint="@string/pwd"
        android:textColorHint="#303481"
        android:textSize="24sp"
        android:drawableStart="@drawable/pwd_resize"
        android:drawablePadding="10dp"/>

    <EditText
        android:id="@+id/emailETXT"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:paddingStart="15dp"
        android:hint="@string/email"
        android:textColorHint="#303481"
        android:textSize="24sp"
        android:drawableStart="@drawable/mail_resize"
        android:drawablePadding="5dp"/>



</LinearLayout>